<resources>

    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryDarkColor</item>
        <item name="colorAccent">@color/primaryColor</item>
        <item name="android:alertDialogTheme">@style/AlertDialogCustom</item>
        <item name="buttonStyle">@style/Widget.AppCompat.Button.Colored</item>
        <item name="tabStyle">@style/TabLayoutCustom</item>
    </style>

    <style name="TabLayoutCustom" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">@android:color/white</item>
    </style>

    <style name="AlertDialogCustom" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:colorPrimary">#FFF</item>
        <item name="android:colorAccent">#0AAEEF</item>
    </style>

</resources>
