<resources>

    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryDarkColor</item>
        <item name="colorAccent">@color/primaryColor</item>
        <item name="android:alertDialogTheme">@style/AlertDialogCustom</item>
        <item name="buttonStyle">@style/Widget.AppCompat.Button.Colored</item>
        <item name="tabStyle">@style/TabLayoutCustom</item>
    </style>

    <style name="TabLayoutCustom" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">@android:color/white</item>
    </style>

    <style name="AlertDialogCustom" parent="Theme.MaterialComponents.Dialog.Alert">
        <item name="android:textColorPrimary">@color/highTextColor</item>
        <item name="colorPrimary">#FFF</item>
    </style>
</resources>
